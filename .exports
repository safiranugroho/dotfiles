# Zsh
if [ "$(ps -p $$ -ocomm=)" = "zsh" ]; then
    # Oh My Zsh
    export ZSH="$HOME/.oh-my-zsh"
    # Set a character at the end of partial lines to none
    export PROMPT_EOL_MARK=""
    # History settings
    export HISTORY_IGNORE="([bf]g|c|clear|e|exit|h|history|incognito|l|l[adfls]|pwd|z)"
fi

# TTY
export GPG_TTY=$(tty)

# Composer
export PATH="~/.composer/vendor/bin:$PATH"

# Ruby
export PATH="/usr/local/opt/ruby/bin:$PATH"
export LDFLAGS="-L/usr/local/opt/ruby/lib"
export CPPFLAGS="-I/usr/local/opt/ruby/include"
export PKG_CONFIG_PATH="/usr/local/opt/ruby/lib/pkgconfig"
eval "$(rbenv init -)"

# Python 3.6
# The original version is saved in .bash_profile.pysave
export PATH="/Library/Frameworks/Python.framework/Versions/3.6/bin:${PATH}"
export PATH=$PATH:/Users/safira/Library/Python/3.6/bin

# Java
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_152.jdk/Contents/Home

# Postgres
export PATH=$PATH:/Applications/Postgres.app/Contents/Versions/9.6/bin
export PGDATA="/usr/local/var/postgres/data"

# Android SDK
export PATH=~/Library/Android/sdk/tools:$PATH
export PATH=~/Library/Android/sdk/platform-tools:$PATH

# Terraform binary
export PATH=$PATH:/Users/safira/Desktop/ANZ/Pipelines/terraform

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm  
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# API Key and city
export MEETUP_API_KEY="25801548365d2e463f2b14d4a7e44"
export MEETUP_CITY="melbourne"

# Heroku
HEROKU_AC_BASH_SETUP_PATH=/Users/safira/Library/Caches/heroku/autocomplete/bash_setup && test -f $HEROKU_AC_BASH_SETUP_PATH && source $HEROKU_AC_BASH_SETUP_PATH;
